<?xml version="1.0" encoding='UTF-8'?>
<config>
	<routes>
		<route id="default" path="~" command="default" />

		<route id="profile" path="/profile" command="show_profile" />
		<route id="profile_edit" path="/profile/edit" command="show_profile_edit" />
		<route id="profile_save" path="/profile/save" command="save_profile" method="post" />


	</routes>

	<commands>
		<command id="default" class="DefaultCommand" view="default" />
		<command id="show_profile" class="ShowProfile" view="profile" guests="0" />
		<command id="show_profile_edit" class="ShowProfileEdit" view="edit_profile" guests="0" />
		<command id="save_profile" class="SaveProfile" guests="0"/>
	</commands>

	<views>
		<view id="default" template="DefaultView" />
		<view id="profile" template="Profile" />
		<view id="edit_profile" template="EditProfile" />
	</views>

</config>