<?xml version="1.0" encoding='UTF-8'?>
<config>
	<routes>
		<route id="route_default" path="~" command="cmd_default" />
		<route id="route_profile" path="/profile" command="cmd_show_profile">
		</route>
		<route id="route_profile_edit" path="/profile/edit" command="cmd_show_edit_profile">
			
		</route>
		<route id="route_profile_save" path="/profile/save" command="cmd_save_profile" method="post">
			
		</route>
		<route id="route_user_by_uid" path="/users/{uid}" command="cmd_show_user_by_id">
			<param name="uid" pattern="[0-9]" required="1" />
		</route>
		<route id="route_user_by_alias" path="/users/{ualias}" command="cmd_show_user_by_alias">
			<param name="alias" pattern=".{4,32}" required="1" />
		</route>
		<route id="route_test_route" path="/testroute/{param1}/{param2}" command="cmd_test">
			<param name="param1" pattern="[0-9]" required="1" />
			<param name="param2" pattern="[0-9]" required="0">48</param>
		</route>
	</routes>

	<commands>
		<command id="cmd_default" class="DefaultCommand" view="view_default" />
		<command id="cmd_test" class="DefaultCommand" view="view_default" />
		<command id="cmd_show_user_by_alias" class="DefaultCommand" view="view_default" />
		<command id="cmd_show_user_by_id" class="DefaultCommand" view="view_default">
			<prep filter="filter_test" />
			<param name="uid" required="1" type="int" />
			<param name="testObject" required="0" type="object" />
			<param name="feedback" required="0" type="string">No feedback</param>
		</command>
	</commands>

	<filters>
		<filter id="filter_test" class="TestFilter" />
	</filters>

	<views>
		<view id="view_default" template="DefaultView" />
	</views>
</config>